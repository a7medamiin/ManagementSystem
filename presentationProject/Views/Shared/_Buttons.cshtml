@model string 

<td class="pt-4"><a asp-action="Details" asp-route-id="@Model"><i class="fas fa-eye"></i></a></td>
<td class="pt-4"><a asp-action="Edit" asp-route-id="@Model"><i class="fas fa-edit"></i></a></td>
<td class="pt-4">
    <form asp-action="Delete" asp-route-id="@Model" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this?');">
        <button type="submit" class="btn btn-link p-0" style="color: mediumblue; text-decoration: none; background-color: transparent; border: none; cursor: pointer;">
            <i class="fas fa-trash"></i>
        </button>
    </form>
</td>