@model EmployeeVm
@{
	ViewData["Title"] = "Details";
}

<h1>Details of @Model.Name Employee </h1>

@if (Model.ImageName is not null)
{
    <div>
        <img src="@Url.Content("~/Files/Images/" + Model.ImageName)" width="200" height="200" alt="Employee Image" />
    </div>
}
<div class="form-group">
     	<label class="col-form-label" asp-for="Name"></label>
     	<input readonly class="form-control" asp-for="Name" />
     	<span asp-validation-for="Name" class="text-danger"></span>
     </div>
     <div class="form-group">
     	<label class="col-form-label" asp-for="Age"></label>
     	<input readonly class="form-control" asp-for="Age" />
     	<span asp-validation-for="Age" class="text-danger"></span>
     </div>
     <div class="form-group">
     	<label class="col-form-label" asp-for="Salary"></label>
     	<input readonly class="form-control" asp-for="Salary" />
     	<span asp-validation-for="Salary" class="text-danger"></span>
     </div>
     <div class="form-group">
     	<label class="col-form-label" asp-for="Address"></label>
     	<input readonly class="form-control" asp-for="Address" />
     	<span asp-validation-for="Address" class="text-danger"></span>
     </div>
     <div class="form-group">
     	<label class="col-form-label" asp-for="Email"></label>
     	<input readonly class="form-control" asp-for="Email" />
     	<span asp-validation-for="Email" class="text-danger"></span>
     </div>
     <div class="form-group">
     	<label class="col-form-label" asp-for="Phone"></label>
     	<input readonly class="form-control" asp-for="Phone" />
     	<span asp-validation-for="Phone" class="text-danger"></span>
     </div>
     <div class="form-group">
     	<label class="col-form-label" asp-for="IsActive"></label>
     	<input readonly class="form-check" asp-for="IsActive" />
     	<span asp-validation-for="IsActive" class="text-danger"></span>
     </div>
     <div class="mt-3">
     	<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
     	<a asp-action="Index" class="btn btn-secondary">Back</a>
     </div>
     
     

